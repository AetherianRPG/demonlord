{
  "hooks": {
    "before:init": ["npm run lint", "echo Project linted successfully!"],
    "after:bumper:bump": [
      "json -I -f src/system.json -e \"this.download=\\\"https://github.com/ClipplerBlood/demonlord-cromethius/releases/download/\\\"+this.version+\\\"/system.zip\\\"\"",
      "echo Download link url bumped"
    ],
    "before:git:release": ["npm run pre-release", "echo Pre-Release completed!"]
  },
  "git": {
    "requireCleanWorkingDir": false
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "draft": true,
    "assets": ["system.zip"]
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "src/system.json",
      "out": "src/system.json"
    }
  }
}
